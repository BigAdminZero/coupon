<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.exercise.mapper.CouponMapperCustom" >

    <!-- 根据用户爱好查询相应的优惠券-->
    <select id="selectCouponsByUserHobby" resultType="com.exercise.entity.Coupon">
        SELECT * FROM
        coupon
        WHERE
        business = #{hobby}
    </select>


</mapper>
